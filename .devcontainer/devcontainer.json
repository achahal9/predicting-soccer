{
    "name": "Python, Jupyter, with uv",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": ".venv/bin/python",
                "jupyter.defaultInterpreter": ".venv/bin/python",
                "git.confirmSync": false,
                "git.postCommitCommand": "sync",
                "git.autofetch": true,
                "git.useEditorAsCommitInput": false,
                "git.rebaseWhenSync": true
            }
        }
    },
    // Using manual curl install to avoid 'features' permission issues
    "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh",
    "postStartCommand": "uv sync"
}